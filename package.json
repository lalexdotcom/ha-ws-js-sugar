{
	"name": "ha-ws-js-sugar",
	"version": "1.0.3-alpha.10",
	"repository": {
		"url": "https://github.com/lalexdotcom/ha-ws-js-sugar.git",
		"type": "git"
	},
	"type": "module",
	"packageManager": "pnpm@10.28.2",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rslib build",
		"check": "biome check --write",
		"dev": "rslib build --watch",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"typecheck": "tsc --noEmit",
		"play": "tsx --watch ./src/playground.dev.ts",
		"release": "tsx scripts/release.ts --release",
		"release:dry": "tsx scripts/release.ts --dry-run --release"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@clack/prompts": "^1.0.0",
		"@rslib/core": "^0.18.5",
		"@types/node": "^22.4.0",
		"commander": "^14.0.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"date-fns": "^4.1.0",
		"home-assistant-js-websocket": "^9.6.0"
	}
}